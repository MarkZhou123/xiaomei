FROM 192.168.202.12:5000/xiaomei/appserver

RUN mkdir /home/ubuntu/{{ .ProName }} /home/ubuntu/logs/{{ .ProName }} && \
    ln -s /home/ubuntu/logs/{{ .ProName }} /home/ubuntu/{{ .ProName }}/log
WORKDIR /home/ubuntu/{{ .ProName }}

CMD [ "./{{ .ProName }}" ]

COPY {{ .ProName }} ./
COPY config  ./config
COPY views   ./views
